<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_marginTop="320dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_x"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_x"
            android:textSize="20sp"
            android:id="@+id/label_x"
            android:layout_marginEnd="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:gravity="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="20sp"
            android:id="@+id/read_x"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="start"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_y"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_y"
            android:textSize="20sp"
            android:id="@+id/label_y"
            android:layout_marginEnd="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:gravity="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="20sp"
            android:id="@+id/read_y"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="start"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_z"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_z"
            android:textSize="20sp"
            android:id="@+id/label_z"
            android:layout_marginEnd="5dp"
            android:visibility="visible"
            android:layout_weight="1"
            android:gravity="end"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0"
            android:textSize="20sp"
            android:id="@+id/read_z"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:gravity="start"/>
    </LinearLayout>

</LinearLayout>